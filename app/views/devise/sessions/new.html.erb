<div class="form-container">
<h1>Log in</h1>

  <div class="form-inputs">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-auto"}) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-login"%>
<% end %>
  </div>
  </div>

<%= render "devise/shared/links" %>
