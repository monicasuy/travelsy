<div class="itinerary-main-container">

  <div class="container">
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/Dianabarr19", class: "avatar-itinerary" %>
    <h1> Just one more thing</h1>
    <div class="itinerary-content">
      <h3><%= @itinerary.content %></h3>
      <% @days.each_with_index do |day, index| %>
        <div class="d-flex">
          <div class="side-line">
            <p class= "side-avatar"><%= index + 1 %></p>
          </div>
          <div class="card-product">
            <% pic =  @stops.where(day: day)&.first&.photo&.key %>
            <%= cl_image_tag pic unless pic.nil?%>
            <div class="card-product-infos">
              <h2 class="day-header">Day <%= day %></h2>
              <% @stops.where(day: day).order(created_at: :asc).each do |stop| %>
                <ul>
                  <li><%= stop.title %></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="modal-buttons">
  <button type="button" class="btn-itinerary-preview" data-toggle="modal" data-target=".bd-example-modal-lg">Preview Itinerary</button>
  <button type="button" class="btn-itinerary-preview ml-4" data-toggle="modal" data-target="#exampleModal">Start Trip</button>
</div>

    </div>
  </div>
  <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100"  src="https://images.unsplash.com/photo-1588514035319-7d7b4d1fad26?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80"  alt="First slide">
      </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1564221710304-0b37c8b9d729?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1558642084-fd07fae5282e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=436&q=80" alt="Third slide">
    </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
         <%= image_tag "logo-smaller.svg", class:"modal-logo" %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4>Pack your stuff, <br> Barcelona is waiting for you! </h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
