<div class="home-banner wizard">
  <div class="wizard-steps-container is--step-0">
    <%= image_tag 'world-travel.svg', class: "world-background"%>

    <div class="wizard-steps-step wizard-steps-step-0">
      <h1>Travelsy</h1>
      <p>Squeeze the most out of your destination</p>
      <%= link_to "Find your next trip", "#", class: "btn btn-flat" %>
    </div>

    <div class="wizard-steps-step wizard-steps-step-1">
      <h1>STEP 1</h1>
    </div>

    <div class="wizard-steps-step wizard-steps-step-2">
      <h1>STEP 2</h1>
    </div>

    <div class="wizard-steps-step wizard-steps-step-3">
      <h1>STEP 3</h1>
    </div>
  </div>
</div>




<div class="home-cards-container">

  <div class="container">
    <h1 id="home-header">How it works?</h1>
    <div>
      <%= image_tag 'home-page-route.svg', class: "home-itinerary-image" %>
    </div>
    <div class="home-headers">
    <h2>Not sure where to go?</h2>
    <h4>Take a look at our most popular destinations</h4>
    </div>
    <div class="home-cards">
      <% @cities.each do |city| %>
          <%= link_to city_path(city) do %>
          <div class="home-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/1600x900/?<%= city.name %>')">
            <h3><strong><%= city.name %></strong></h3>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
